<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qin.MySurvey">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BuildQuestion" android:configChanges="locale"  />
        <activity android:name=".Question" android:configChanges="locale" />
        <activity
            android:name=".Report"
            android:configChanges="locale" />
        <activity
            android:name=".MainActivity"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SActivity"
            android:configChanges="locale" />
        <activity
            android:name=".TimeActivity"
            android:configChanges="locale" />
        <activity
            android:name="com.king.zxing.CaptureActivity"
            android:configChanges="locale"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EasyCaptureActivity"
            android:configChanges="locale" />
        <activity
            android:name=".Build_Finish"
            android:configChanges="locale" />
        <activity
            android:name=".Build_QR"
            android:configChanges="locale" />
    </application>

</manifest>